<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:backgroundTint="@android:color/white">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_light"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/nis_logo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nis_logo"
                    android:padding="16dp"
                    />
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Sa vama na putu"
                    android:textColor="@android:color/white"
                    android:paddingTop="12dp"
                    android:paddingLeft="16dp"
                    android:textSize="20sp"
                    />

                <ImageButton
                    android:id="@+id/close"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_button"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="5dp"

                    />


            </LinearLayout>


            <ImageView
                android:id="@+id/vatromet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/top_bar"
                android:src="@drawable/ic_fireworks"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"

                />


            <TextView
                android:id="@+id/dobro_vece"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/poruka"
                android:layout_below="@id/vatromet"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="italic"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_dark"
                />

            <ImageView
                android:id="@+id/qr"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:src="@drawable/qr"
                android:layout_below="@id/dobro_vece"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/nastavi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="zavrsi"
                android:textColor="@android:color/white"
                android:layout_below="@id/qr"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"

                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>